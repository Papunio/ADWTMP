<mvc:View controllerName="frontendapp.controller.PlayersList"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="true" showNavButton="true" navButtonPress="onNavButton" enableScrolling="true">
		<Bar>
			<contentRight>
				<Button icon="sap-icon://add" text="ADD PLAYER" press="onPressAddPlayer"/>
			</contentRight>
		</Bar>
		<Panel width="auto" class="sapUiResponsiveMargin">
			<Bar>
				<contentRight>
					<SearchField search="onSearch" width="17.5rem"/>
				</contentRight>
			</Bar>

			<Table id="playersTable" items="{path:'/Players', sorter: {path: 'position'}}" alternateRowColors="true" growing="true" growingThreshold="22" growingScrollToLoad="true">
				<columns>
					<Column width="5%">

					</Column>
					<Column>
						<Label text="{i18n>name}"/>
					</Column>
					<Column>
						<Label text="{i18n>lastName}"/>
					</Column>
					<Column>
						<Label text="{i18n>position}"/>
					</Column>
					<Column>
						<Label text="{i18n>age}"/>
					</Column>

					<Column width="5%">

					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active" press="onPressPlayer" highlight="{= ${position} === 'Attacker' ? 'Error' : ${position} === 'Defender' ? 'Indication07' : ${position} === 'Midfielder' ? 'Information' : ${position} === 'Goalkeeper' ? 'Success' : 'None' }">
						<Text text=""/>
						<Text text="{name}"/>
						<Text text="{lastName}"/>
						<Text text="{position}"/>
						<Text text="{age}"/>
						<FlexBox>
							<Button id="updatePlayer" type="Transparent" icon="sap-icon://edit" press="onPressUpdatePlayer"/>
							<Button id="deletePlayer" type="Transparent" icon="sap-icon://delete" press="onPressDeletePlayer"/>
						</FlexBox>
					</ColumnListItem>
				</items>
			</Table>
		</Panel>
	</Page>
</mvc:View>
