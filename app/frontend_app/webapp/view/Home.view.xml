<mvc:View xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" height="100%" controllerName="frontendapp.controller.Home">
	<Page showHeader="true" showNavButton="false" enableScrolling="true">
		<customHeader>
			<Bar>
				<contentLeft>
					<Title titleStyle="Auto" text="Aplikacja wspomagająca organizacje meczów piłkarskich"/>
				</contentLeft>

				<contentRight>
					<Button id="changeThemeButton" type="Neutral" icon="sap-icon://dark-mode" press="changeTheme"/>
				</contentRight>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Bar>
					<contentLeft>
						<Button icon="sap-icon://soccer" text="PIŁECZKA"/>
						<Button text="{i18n>matchHistory}" press="onPressMatchHistory" />
						<Button text="{i18n>teams}" press="onPressTeams" />
						<Button text="{i18n>players}" press="onPressPlayers" />
					</contentLeft>
					<contentRight>
						<Button text="ADD MATCH" icon="sap-icon://add" press="onPressAddMatch" />
					</contentRight>
				</Bar>
			</OverflowToolbar>
		</subHeader>
		<content>
			<f:SidePanel id="homeSidePanel" toggle="onPanelToggle" sidePanelPosition="Right" sidePanelWidth="15%">
				<f:mainContent>
					<Panel width="auto" class="sapUiResponsiveMargin">
						<Table id="toBePlayedTable" items="{path:'MatchesModel>/', sorter : {path : 'MatchesModel>date'}}" alternateRowColors="true" growing="true" growingThreshold="10">
							<columns>
								<Column width="5%">
									<Label text="" />
								</Column>

								<Column width="2%"></Column>
								<Column>
									<Label text="{i18n>homeTeam}"/>
								</Column>

								<Column width="2%"></Column>
								<Column>
									<Label text="{i18n>guestTeam}"/>
								</Column>

								<Column>
									<Label text="{i18n>matchDate}"/>
								</Column>
								<Column>
									<Label text="{i18n>matchPlace}"/>
								</Column>

								<Column width="5%">
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Navigation" press="onMatchPress" highlight="{path: 'MatchesModel>date', formatter: '.formatter.checkDate'}">
									<Text text=""/>
									<Image height="100%" width="100%" src="{MatchesModel>homeTeam/logo}"/>
									<Text text="{MatchesModel>homeTeam/name}"/>
									<Image height="100%" width="100%" src="{MatchesModel>guestTeam/logo}"/>
									<Text text="{MatchesModel>guestTeam/name}"/>
									<Text text="{path: 'MatchesModel>date', formatter: '.formatter.formatDate'}"/>
									<Text text="{MatchesModel>place}"/>
									<FlexBox>
										<Button id="finishMatch" type="Transparent" icon="sap-icon://accept" press="onFinishMatchPress"/>
										<Button id="deleteMatch" type="Transparent" icon="sap-icon://delete" press="onDeleteMatchPress"/>
									</FlexBox>
								</ColumnListItem>
							</items>
						</Table>
					</Panel>
				</f:mainContent>
				<f:items>
					<f:SidePanelItem icon="sap-icon://soccer" text="Matches">
						<VBox>
							<Text text="" class="sapUiSmallMarginBottom" />
							<Button text="ADD MATCH" press="onPressAddMatch"/>
							<Button text="MATCH HISTORY" press="onPressMatchHistory"/>
						</VBox>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://family-care" text="Teams">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD TEAM" />
							<Button text="TEAMS LIST" press="onPressTeams"/>
						</VBox>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://physical-activity" text="Players">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD PLAYER" />
							<Button text="PLAYERS LIST" press="onPressPlayers"/>
						</VBox>
					</f:SidePanelItem>
				</f:items>
			</f:SidePanel>
		</content>
	</Page>
</mvc:View>
