<mvc:View xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" height="100%" controllerName="frontendapp.controller.Home">
	<Page showHeader="true" showNavButton="false" enableScrolling="false">
		<customHeader>
			<Bar>
				<contentLeft>
					<Text text="Aplikacja wspomagająca organizacje meczów piłkarskich"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Bar>
					<contentLeft>
						<Button icon="sap-icon://soccer" text="PIŁECZKA"/>
						<Button text="MATCH HISTORY" press="onPressMatchHistory" />
						<Button text="TEAMS" press="onPressTeams" />
						<Button text="PLAYERS" press="onPressPlayers" />
					</contentLeft>
					<contentRight>
						<Button text="ADD MATCH" icon="sap-icon://add" press="onPressAddMatch" />
					</contentRight>
				</Bar>
			</OverflowToolbar>
		</subHeader>
		<content>
			<f:SidePanel id="homeSidePanel" toggle="onPanelToggle" sidePanelPosition="Right" sidePanelWidth="15%">
				<f:mainContent>
					<Panel width="auto" class="sapUiResponsiveMargin">
						<Table id="toBePlayedTable" items="{path:'MatchesModel>/', sorter : {path : 'MatchesModel>date'}}">
							<columns>
								<Column width="5%">
									<Label text="{i18n>#}"/>
								</Column>

								<Column width="2%"></Column>
								<Column>
									<Label text="{i18n>team1}"/>
								</Column>

								<Column width="2%"></Column>
								<Column>
									<Label text="{i18n>team2}"/>
								</Column>

								<Column>
									<Label text="{i18n>matchDate}"/>
								</Column>
								<Column>
									<Label text="{i18n>place}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Navigation" press="onMatchPress">
									<Text text="{MatchesModel>index}"/>
									<Image height="100%" width="100%" src="{MatchesModel>team1/logo}"/>
									<Text text="{MatchesModel>team1/name}"/>
									<Image height="100%" width="100%" src="{MatchesModel>team2/logo}"/>
									<Text text="{MatchesModel>team2/name}"/>
									<Text text="{path: 'MatchesModel>date', formatter: '.formatter.formatDate'}"/>
									<Text text="{MatchesModel>place}"/>
								</ColumnListItem>
							</items>
						</Table>
					</Panel>
				</f:mainContent>
				<f:items>
					<f:SidePanelItem icon="sap-icon://soccer" text="Matches">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD MATCH" press="onPressAddMatch"/>
							<Button text="MATCH HISTORY" press="onPressMatchHistory"/>
						</VBox>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://family-care" text="Teams">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD TEAM" />
							<Button text="TEAMS LIST" press="onPressTeams"/>
						</VBox>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://physical-activity" text="Players">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD PLAYER" />
							<Button text="PLAYERS LIST" press="onPressPlayers"/>
						</VBox>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://addresses" text="Pitches">
						<VBox>
							<Text text="Static Content" class="sapUiSmallMarginBottom" />
							<Button text="ADD FOOTBALL PITCH" />
							<Button text="FOOTBALL PITCH LIST" />
						</VBox>
					</f:SidePanelItem>
				</f:items>
			</f:SidePanel>
		</content>
	</Page>
</mvc:View>
