<mvc:View controllerName="frontendapp.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns="sap.m" height="100%">
	<Page showHeader="true" enableScrolling="false" class="sapUiContentPadding">
		<content>
			<Table id="toBePlayedTable" items="{path:'MatchesModel>/'}">
				<columns>
					<Column>
						<Label text="{i18n>team1}"/>
					</Column>
					<Column>
						<Label text="{i18n>team2}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<Text text="{MatchesModel>team1/name}"/>
						<Text text="{MatchesModel>team2/name}"/>
					</ColumnListItem>
				</items>

			</Table>
		</content>
	</Page>
</mvc:View>