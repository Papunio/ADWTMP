<mvc:View controllerName="frontendapp.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns="sap.m" height="100%">
	<Page showHeader="true" showNavButton="false" enableScrolling="false" class="sapUiContentPadding">
		<customHeader>
			<Bar>
				<contentLeft>
					<Text text="Aplikacja wspomagająca organizacje meczów piłkarskich"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<!-- <headerContent>
			<Text text="Aplikacja wspomagająca organizacje meczów piłkarskich" textAlign="Left"/>
		</headerContent> -->
		<subHeader>
			<OverflowToolbar>
				<Button icon="sap-icon://soccer" text="PIŁECZKA"/>
				<Button text="ADD MATCH" press="onPressAddMatch" />
				<Button text="TEAMS" press="onPressTeams" />
				<Button text="PLAYERS" press="onPressPlayers" />
			</OverflowToolbar>
		</subHeader>
		<content>
			<Table id="toBePlayedTable" items="{path:'MatchesModel>/'}">
				<columns>
					<Column width="5%">
						<Label text="{i18n>#}"/>
					</Column>
					<Column>
						<Label text="{i18n>team1}"/>
					</Column>
					<Column>
						<Label text="{i18n>team2}"/>
					</Column>
					<Column>
						<Label text="{i18n>place}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onMatchPress">
						<Text text="{MatchesModel>index}"/>
						<Text text="{MatchesModel>team1/name}"/>
						<Text text="{MatchesModel>team2/name}"/>
						<Text text="{MatchesModel>place}"/>
					</ColumnListItem>

				</items>

			</Table>
		</content>
	</Page>
</mvc:View>