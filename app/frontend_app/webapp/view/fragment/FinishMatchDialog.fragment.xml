<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="finishMatchDialog" title="{i18n>finishMatch}" class="sapUiTinyMargin">

        <Bar>
            <contentLeft>
                <!-- <Label text="{i18n>homeTeamScore}" labelFor="homeTeamScore" width="auto"/> -->
                <Label text="{/homeTeam}" labelFor="homeTeamScore" width="auto"/>
            </contentLeft>
            <contentRight>
                <StepInput id="homeTeamScore" value="0" min="0" required="true" width="40%"/>
            </contentRight>
        </Bar>

        <Bar>
            <contentLeft>
                <Label text="{/guestTeam}" labelFor="guestTeamScore" />
            </contentLeft>
            <contentRight>
                <StepInput id="guestTeamScore" value="0" min="0" required="true" width="40%"/>
            </contentRight>
        </Bar>
        <Bar>
            <contentRight>
                <Button id="confirmBtnS" icon="sap-icon://accept" text="{i18n>submit}" press="submitMatch" />
            </contentRight>
            <contentLeft>
                <Button id="cancelBtnS" icon="sap-icon://decline" text="{i18n>cancel}" press="onPressCancel" />
            </contentLeft>
        </Bar>
    </Dialog>
</core:FragmentDefinition>