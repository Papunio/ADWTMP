<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="addNewTeamDialog" title="{i18n>addNewTeam}" class="sapUiTinyMargin">
        <Input id="teamName" placeholder="Enter name of team" />
        <Input id="badge" placeholder="Enter badge url" />

        <MultiComboBox id="selectedPlayers" items="{path: '/Players'}">
            <core:Item key="{ID}" text="{name} {lastName}, {position}"/>
        </MultiComboBox>
        <Bar>
            <contentRight>
                <Button id="confirmBtn" icon="sap-icon://accept" text="Submit" press="addTeam" />
            </contentRight>
            <contentLeft>
                <Button id="cancelBtn" icon="sap-icon://decline" text="Cancel" press="onPressCancel" />
            </contentLeft>
        </Bar>
    </Dialog>
</core:FragmentDefinition>