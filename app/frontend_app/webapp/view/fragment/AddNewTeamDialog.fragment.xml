<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="addNewTeamDialog" title="{i18n>addNewTeam}" class="sapUiTinyMargin">

        <Label text="{i18n>teamName}" labelFor="teamName" />
        <Input id="teamName" required="true"/>

        <Label text="{i18n>badge}" labelFor="badgeLink" />
        <Input id="badgeLink" />

        <Label text="{i18n>selectedPlayers}" labelFor="selectedPlayers" />
        <MultiComboBox id="selectedPlayers" items="{path: '/Players'}" required="true">
            <core:Item key="{ID}" text="{name} {lastName}, {position}"/>
        </MultiComboBox>
        <Bar>
            <contentRight>
                <Button id="confirmBtn" icon="sap-icon://accept" text="Submit" press="addTeam" />
            </contentRight>
            <contentLeft>
                <Button id="cancelBtn" icon="sap-icon://decline" text="Cancel" press="onPressCancel" />
            </contentLeft>
        </Bar>
    </Dialog>
</core:FragmentDefinition>