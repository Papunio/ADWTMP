<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="updateTeamDialog" title="{i18n>updating}" class="sapUiTinyMargin">

        <Label text="{i18n>teamName}" labelFor="teamNameU" />
        <Input id="teamNameU" value="{teamModel>/name}" required="true"/>

        <Label text="{i18n>badge}" labelFor="badgeU" />
        <Input id="badgeU" value="{teamModel>/logo}" />

        <Label text="{i18n>selectedPlayers}" labelFor="selectedPlayersU" />
        <MultiComboBox id="selectedPlayersU" items="{path: '/Players'}" required="true">
            <core:Item key="{ID}" text="{name} {lastName}, {position}"/>
        </MultiComboBox>
        <Bar>
            <contentRight>
                <Button id="confirmBtnU" icon="sap-icon://accept" text="Submit" press="updateTeam" />
            </contentRight>
            <contentLeft>
                <Button id="cancelBtnU" icon="sap-icon://decline" text="Cancel" press="onPressCancel" />
            </contentLeft>
        </Bar>
    </Dialog>
</core:FragmentDefinition>