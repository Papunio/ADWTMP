<mvc:View controllerName="frontendapp.controller.MatchHistory"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartTable="sap.ui.comp.smarttable" height="100%">
	<Page showHeader="true" showNavButton="true" navButtonPress="onNavButton">
		<FlexBox alignItems="Center" justifyContent="Center">
			<items>
				<Button press="refreshTable" icon="sap-icon://refresh" />
			</items>
		</FlexBox>
		<Panel width="auto" class="sapUiResponsiveMargin" height="auto">
			<smartTable:SmartTable id="finishedMatchesTable" entitySet="FinishedMatches" initiallyVisibleFields="homeTeam,score,guestTeam,place" ignoredFields="ID" tableType="Table" useVariantManagement="true" header="{i18n>matches}" showRowCount="true" showFullScreenButton="false" useTablePersonalisation="false" enableAutoBinding="true" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true">
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
		</Panel>
	</Page>
</mvc:View>
