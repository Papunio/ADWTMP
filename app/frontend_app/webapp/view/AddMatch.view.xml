<mvc:View controllerName="frontendapp.controller.AddMatch"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page showHeader="true" showNavButton="true" navButtonPress="onNavButton" enableScrolling="false">
        <Panel width="50%" class="sapUiResponsiveMargin">
            <Select id="homeTeam" width="100%" required="true" selectedKey="{/SelectedKey}" forceSelection="false" items="{
						path: '/Teams'
					}">
                <core:ListItem key="{ID}" text="{name}" icon="sap-icon://feeder-arrow"/>
            </Select>
            <Select id="guestTeam" width="100%" required="true" selectedKey="{/SelectedKey}" forceSelection="false" items="{
						path: '/Teams'
					}">
                <core:ListItem key="{ID}" text="{name}" icon="sap-icon://feeder-arrow"/>
            </Select>

            <DatePicker id="matchDate" value="{
						'path':'/valueDP2',
						'type':'sap.ui.model.type.Date',
						'formatOptions': {
							'pattern': 'yyyy-MM-dd'
						}
					}" change="handleChange" class="sapUiSmallMarginBottom"/>

            <Input id="matchPlace" placeholder="{i18n>matchPlace}" />
            <Button text="ADD MATCH" press="onPressAccept" />
        </Panel>
    </Page>
</mvc:View>
